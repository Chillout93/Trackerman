<table class="table table-bordered table-striped table-hover">
  <% @tv_show.each do |tv_show| %>
    <tr>
      <td style="width:15%">
        <%= link_to tv_show_path(tv_show.id) do %>
        <%= image_tag("#{@configuration.base_url}w154#{tv_show.poster_path}") if tv_show.poster_path %>
        <% end %>
      </td>
      <td>
        <%= link_to tv_show.name, tv_show_path(tv_show.id) %> (<%= tv_show.first_air_date %>) <br />
        Directors: <% Tmdb::TV.crew(tv_show.id).each do |crew| %> 
        <% end %>
        <br />
      </td>
    </tr>
  <% end %>
</table>

<div><%= debug @tv_show %></div>